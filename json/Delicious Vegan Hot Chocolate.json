    "recipeIngredient": [
        "2 1/2 Cups soy milk",
        "3 Tbsp white sugar",
        "3 Tbsp cocoa powder",
        "1/2 tsp salt",
        "1/2 tsp vanilla extract",
        "1 pinch ground cinnamon",
        "1 pinch cayenne pepper"
    ],
    "recipeInstructions": [
        {
            "@type": "HowToStep",
            "text": "Bring the soy milk, sugar, cocoa powder, salt, vanilla extract, cinnamon, and cayenne pepper to a simmer in a saucepan over medium-high heat. Remove from the heat and whisk until frothy. Serve immediately."
        }
    ],
