{
    "@context": "https://schema.org",
    "@type": "Recipe",
    "name": "Apple Cobbler",
    "author": {
        "@type": "Person",
        "name": "Recipe Book Selections"
    },
    "description": "description of recipe",
    "recipeCategory": "classic, pies",
    "recipeYield": "yield",
    "recipeIngredient": [
        "6 Large Apples (Peeled, cored and sliced)",
        "3 Tbsp Cinnamon (to taste)",
        "2 Tbsp Lime or lemon juice",
        "2 Tbsp Sugar (sub splenda)",
        "1/4 Cup Apple Cider",
        "2 Cups Instant Oatmeal",
        "1/4 Cup Butter (Melted)",
        "1/4 Cup Brown Sugar",
        "2 Tbsp Cinnamon"
    ],
    "recipeInstructions": [
        {
            "@type": "HowToStep",
            "text": "Mix filling ingredients (apples, 3 tbsp cinnamon,lime, sugar and cider) together and chill for at least 1 hour."
        },
        {
            "@type": "HowToStep",
            "text": "Toss filling with apple cider."
        },
        {
            "@type": "HowToStep",
            "text": "Pour into greased oven safe pan."
        },
        {
            "@type": "HowToStep",
            "text": "Mix topping ingredients together thoroughly and spread on top."
        },
        {
            "@type": "HowToStep",
            "text": "Bake at 350 degrees for 45-60 minutes or until apples are tender and bubbly."
        }
    ],
