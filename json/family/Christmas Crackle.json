    "recipeIngredient": [
        "14 Cups Microwave popcorn, popped (about 2 bags)",
        "3 Cups Rice Krispies cereal",
        "2 Cups Mixed salted nuts",
        "1 lb white chocolate",
        "3 Tbsp Peanut butter"
    ],
    "recipeInstructions": [
        {
            "@type": "HowToStep",
            "text": "Mix popcorn, Rice Krispies and nuts in a large bowl."
        },
        {
            "@type": "HowToStep",
            "text": "In the microwave melt:\n\nwhite chocolate and peanut butter. Start with 1 minute then stir and repeat until melted and smooth. Pour over the popcorn and mix well. Spread onto wax paper and let set for about 2 hours. Break apart into pieces."
        }
    ],
