    "recipeIngredient": [
        "1 Tbsp margerine",
        "2 scallion, chopped",
        "1 tsp cornstarch",
        "1/2 cup half-and-half cream",
        "2 tsp lemon juice",
        "1/8 tsp salt",
        "1/8 tsp pepper",
        "2/3 cup cooked crabmeat",
        "4 mushrooms (Sliced)",
        "2 Tbsp dry bread crumbs",
        "1 1/3 Tbsp grated Parmesan cheese",
        "1 Tbsp melted margerine"
    ],
    "recipeInstructions": [
        {
            "@type": "HowToStep",
            "text": "Put margarine and onion in a bowl. Microwave uncovered until crisp."
        },
        {
            "@type": "HowToStep",
            "text": "Mix in cornstarch, stir in half and half, lemon juice, salt, and pepper. Microwave uncovered for one minute. Stir, and microwave for another minute. Stir in the crab and mushroom."
        },
        {
            "@type": "HowToStep",
            "text": "Mix topping, sprinkle on top, cover loosely, and microwave until hot."
        }
    ],
