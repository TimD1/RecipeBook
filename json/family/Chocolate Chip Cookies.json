{
    "@context": "https://schema.org",
    "@type": "Recipe",
    "name": "Chocolate Chip Cookies",
    "author": {
        "@type": "Person",
        "name": "Sue Dunn (mom)"
    },
    "description": "description of recipe",
    "recipeCategory": "classic, pies",
    "recipeYield": "yield",
    "recipeIngredient": [
        "3/4 Cup granulated sugar",
        "3/4 Cup packed brown sugar",
        "1 Cup butter or margarine, softened",
        "1 Egg",
        "2 1/4 Cups all - purpose flour",
        "1 tsp Baking soda",
        "1/2 tsp Salt",
        "1 Cup Coarsely Chopped nuts (optional)",
        "2 Cups Semisweet Chocolate Chips"
    ],
    "recipeInstructions": [
        {
            "@type": "HowToStep",
            "text": "Heat the oven to 375. "
        },
        {
            "@type": "HowToStep",
            "text": "Mix both sugars, margarine and egg in a large bowl with a wooden spoon (or mixer). Stir in flour, baking soda and salt (dough will be stiff). Stir in nuts and chocolate chips."
        },
        {
            "@type": "HowToStep",
            "text": "Drop dough by rounded tablespoonfuls about 3 inches apart onto an ungreased cookie sheet. "
        },
        {
            "@type": "HowToStep",
            "text": "Bake until light brown, 8-10 minutes (centers will be soft). Let cookies cool slightly, then remove from cookie sheet with spatula. "
        }
    ],
