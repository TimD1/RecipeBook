{
    "@context": "https://schema.org",
    "@type": "Recipe",
    "name": "Apple Crumb Pie",
    "author": {
        "@type": "Person",
        "name": "BLC LYO"
    },
    "description": "description of recipe",
    "recipeCategory": "pies",
    "recipeYield": "1 pie",
    "recipeIngredient": [
		"1 deep dish pie crust",
        "7 apples, peeled and sliced",
        "1/2 cup sugar",
        "1 tsp cinnamon",
        "dash of salt",
        "1/3 cup butter",
        "1/2 cup sugar",
        "3/4 cup flour"
    ],
    "recipeInstructions": [
        {
            "@type": "HowToStep",
            "text": "Mix apples, sugar, cinnamon, and salt; place mixture in pie shell."
        },
        {
            "@type": "HowToStep",
            "text": "Cream together butter, sugar, and flour. Add to top of filling."
        },
        {
            "@type": "HowToStep",
            "text": "Bake at 425F for 40-50 minutes."
        }
    ],
