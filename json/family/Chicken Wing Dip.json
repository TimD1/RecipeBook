{
    "@context": "https://schema.org",
    "@type": "Recipe",
    "name": "Chicken Wing Dip",
    "author": {
        "@type": "Person",
        "name": "Tom Dunn"
    },
    "description": "description of recipe",
    "recipeCategory": "appetizers",
    "recipeYield": "yield",
    "recipeIngredient": [
        "4-6 oz Frank's hot sauce",
        "2 (8 oz) packages regular cream cheese",
        "1 (8 oz) bottle bleu cheese dressing",
        "1 chicken breast, cooked and shredded",
        "8 oz Monterey Jack, shredded"
    ],
    "recipeInstructions": [
        {
            "@type": "HowToStep",
            "text": "Cook and shred chicken."
        },
        {
            "@type": "HowToStep",
            "text": "In a medium-size saucepan, bring hot sauce to a simmer over medium-low heat. Add cream cheese and stir continuously until fully melted. Stir in dressing."
        },
        {
            "@type": "HowToStep",
            "text": "Add chicken and stir until fully coated. Add shredded cheese and stir until fully melted."
        },
        {
            "@type": "HowToStep",
            "text": "Transfer mixture to a small crockpot and heat on low. Or transfer to a small casserole dish and bake at 350F until bubbly (20-25 minutes). "
        },
        {
            "@type": "HowToStep",
            "text": "Serve warm with tortilla chips."
        }
    ],
