    "description": "description of recipe",
    "recipeCategory": "classic, pies",
    "recipeYield": "yield",
    "recipeIngredient": [
        "3 oz reduced - fat cream cheese , softened (Neufch tel)",
        "2 Cups Low fat milk",
        "1 Tbsp butter",
        "1 tsp Salt",
        "2 1/2 Tbsp Flour",
        "3 cloves garlic, finely chopped",
        "1 Cup grated Parmesan cheese"
    ],
    "recipeInstructions": [
        {
            "@type": "HowToStep",
            "text": "Blend cream cheese, milk, flour and salt until smooth"
        },
        {
            "@type": "HowToStep",
            "text": "Melt butter in sauce pan and saute garlic for 1 minute"
        },
        {
            "@type": "HowToStep",
            "text": "Add milk mixture to sauce burn and cook to simmer for 5 minutes"
        },
        {
            "@type": "HowToStep",
            "text": "Remove from heat, add cheese, stir and cover for 10 minutes"
        }
    ],
